{
    // 括弧的符號
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // 自動填寫結束符號的括弧
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // 點擊或 (ctrl + shift + ←/→) 要自動選取的文字範圍
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // 可折疊的程式碼區塊
    "folding": {
        "markers": {
            "start": "^\\s*(def|thread|while|for|if|elif|else).*:(\\s*|\\s*#.*)$",
            "end": "^\\s*(end|(elif.+:)|else:)(\\s*|\\s*#.*)$"
        }
    },
    // 自動添加 tab 縮排的規則
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(def|thread|while|for|if|elif|else).*:(\\s*|\\s*#.*)$",
        "decreaseIndentPattern": "^\\s*(end|(elif.+:)|else:)(\\s*|\\s*#.*)$"
    },
    // 註解區塊
    "comments": {
        "lineComment": "#"
    }
}